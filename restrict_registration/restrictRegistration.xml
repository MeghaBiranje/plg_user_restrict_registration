	<version>__DEPLOY_VERSION__</version>
	<description>This is user restrict plug-in will restrict the user after crossing a given user limit.</description>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_user_restrictregistration.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_user_restrictregistration.sys.ini</language>
	</languages>
	<files>
		<filename plugin="restrictRegistration">restrictRegistration.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="userCount"
					type="text"
					label="PLG_USER_RESTRICT_REGISTRATION_USER_COUNT_LABLE"
					description="PLG_USER_RESTRICT_REGISTRATION_USER_COUNT_LABLE_DESC"
					>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
